<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="388dp"
            android:id="@+id/constraintLayout"
            android:layout_marginTop="99dp" android:layout_marginBottom="193dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/navigation"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
    >
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/printerNameInput" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:hint="Printer name"/>
        <Button
                android:text="Save Printer"
                android:layout_width="210dp"
                android:layout_height="50dp"
                android:id="@+id/savePrinterNameButton"
                app:layout_constraintStart_toStartOf="@+id/printerNameInput" android:layout_marginTop="17dp"
                app:layout_constraintTop_toBottomOf="@+id/printerNameInput"
                app:layout_constraintEnd_toEndOf="@+id/printerNameInput"/>
        <Button
                android:text="Test print"
                android:layout_width="210dp"
                android:layout_height="50dp"
                android:id="@+id/testPrintButton"
                app:layout_constraintStart_toStartOf="@+id/printerNameInput" android:layout_marginTop="72dp"
                app:layout_constraintTop_toBottomOf="@+id/printerNameInput"
                app:layout_constraintEnd_toEndOf="@+id/printerNameInput"/>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>